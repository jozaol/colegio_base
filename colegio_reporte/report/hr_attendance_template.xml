<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_hr_attendance_document">
    <t t-call="web.external_layout">
        <br/>
        <table class="table table-sm o_main_table">
            <thead>
            <tr>
                <th><strong>FECHA</strong></th>
                <th><strong>ENTRADA</strong></th>
                <th><strong>SALIDA</strong></th>
                <th><strong>TARDANZA</strong></th>
                <th><strong>ANTICIPADA</strong></th>
                <th><strong>PERMANENCIA</strong></th>
                <th><strong>HORAS</strong></th>
                <th><strong>MINUTOS</strong></th>
                <th><strong>ESTADO</strong></th>
            </tr>
            </thead>
            <tbody>
            <t t-foreach="doc.get_data(doc.employee_id,doc.date_start,doc.date_end)" t-as="line">
                <tr>
                    <td style="text-align: center"><span t-esc="line['fecha']"/></td>
                    <td style="text-align: right"><span t-esc="line['entrada']"/></td>
                    <td style="text-align: right"><span t-esc="line['salida']"/></td>
                    <td style="text-align: right"><span t-esc="line['tardanza']"/></td>
                    <td style="text-align: right"><span t-esc="line['anticipada']"/></td>
                    <td style="text-align: right"><span t-esc="line['permanencia']"/></td>
                    <td style="text-align: center"><span t-esc="line['horas']"/></td>
                    <td style="text-align: center"><span t-esc="line['minutos']"/></td>
                    <td style="text-align: center"><span t-esc="line['estado']"/></td>
                </tr>
            </t>
            </tbody>
        </table>
    </t>
</template>

<template id="report_hr_attendance">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-call="asistencia.report_hr_attendance_document"/>
        </t>
    </t>
</template>
</odoo>