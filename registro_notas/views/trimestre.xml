<?xml version="1.0"?>
<odoo> 
 
 <record id="view_form_trimestre" model="ir.ui.view">
  <field name="name">Notas Form</field>
  <field name="model">colegio.trimestre</field>
  <field name="arch" type="xml">
   <form string="Trimestre">
    <sheet>
       <group>
        <field name="anyaca_id" style="width: 20%%"/>
        <field name="trimestre_id" placeholder="" style="width: 20%%"/>
        <field name="name" style="width: 20%%"/>  
       </group>
    </sheet>
   </form>
  </field>
 </record>

<!--esto permite clear campo en forma horizontal en las listas-->
   <record id="view_tree_trimestre" model="ir.ui.view">
    <field name="name">Trimestre List</field>
    <field name="model">colegio.trimestre</field>
    <field name="arch" type="xml">
      <tree>
        <field name="anyaca_id" />
        <field name="name"/>
        <field name="trimestre_id" />
      </tree>
    </field>   
  </record>
</odoo>